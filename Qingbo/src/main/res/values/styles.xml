<resources>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
    </style>

    <style name="DetailTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/detailActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="actionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_solid_light_holo</item>
    </style>

    <style name="detailActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
